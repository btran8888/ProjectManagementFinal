extends layout

block content
  div(class='container' style='border: 1px solid black')
    h4.text-center Details of your account 
    table.table 
      thead
          tr
            th(style='width: 50%;')
            th(style='width: 50%')
      tbody
        tr  
          td  Login Name
          td(class='text-right') #{user.username}
        tr
          td Email
          td(class='text-right') #{user.email}
        tr
          td Type of User
          td(class='text-right') #{user.role}
    
  div(style='padding-top: 2cm')
  div(class='container' style='border: 1px solid black')
    h5.align-center 
      h4.text-center Projects Owned by You 
      table.table 
        thead
          tr
            th(class='text-left') Project Name
            th(class='text-center') Manager
            th(class='text-right') Budget 
         tbody
         each p in projectx
           tr  
             td 
               a(href='/project/#{p.name}') #{p.name}
             td(class='text-center') 
               a(href='/user/#{p.manager}') #{p.manager}
             td(class='text-right') 
               | $#{p.budget }

  h4.text-center  
    div.col-md-4
    div( class='col-md-4' style='padding-top: 1cm')
      a(href='addproject')
        button(class='btn btn-lg btn-primary btn-block', type='submit')  Add Project
    div.col-md-4
 
