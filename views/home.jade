extends layout

block content
  div(class = 'container', style='border: 1px solid')
    h4.align-center 
      div.text-center Details of your account 
      table.table 
        thead
          tr
            th(style='width: 50%;')
            th(style='width: 50%')
        tbody
          tr  
            td  Login Name
            td(class='text-center') #{user.username}
          tr
            td Email
            td(class='text-center') #{user.email}
          tr
            td Type of User
            td(class='text-center') #{user.role}
                


