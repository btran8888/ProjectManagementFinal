extends layout

block content
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Add New Project  
          div.add-project-wall
            form(class='form-signin', action='/addproject', method='POST')
              input(type='text', name='name', class='form-control', placeholder='Project name',required, autofocus)
              input(type='text', name='description', class='form-control', placeholder='Project description',required, autofocus)
              input(type='text', name='manager', class='form-control', placeholder='Manager username',required)
              input(type='text', name='budget', class='form-control', placeholder='budget in dollars',required)
              button(class='btn btn-lg btn-primary btn-block', type='submit') Create Project 
              span.clearfix
          #message
            if message
              h1.text-center.error-message #{message}
